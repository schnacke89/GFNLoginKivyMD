                text: "Eingeloggt als: "
                pos_hint: {"center_y": .5}
                x: root.center_x - self.width -30
            
            MDLabel:
                id: name
                adaptive_size: True
                pos: logged_in_as.x + logged_in_as.width + 30, logged_in_as.y
            
            MDLabel:
                id: clock_text
                adaptive_size: True
