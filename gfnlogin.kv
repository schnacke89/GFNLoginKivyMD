                adaptive_size: True
                id: start_time_text
                text: "Startzeit:"
                pos: logged_in_as.x, clock_text.y - self.height  - 5
            
            MDLabel:
                adaptive_size: True
                id: start_time
                pos: name.x + name.width - self.width, start_time_text.y

            MDLabel:
                adaptive_size: True
                id: target_time
                text: "Um 16:30 ausloggen:"
                pos: logged_in_as.x, start_time_text.y - self.height *2 - 10
                disabled: True
                opacity: 0
            
            MDCheckbox:
                id: target_time_check
                adaptive_size: True
                center_x: clock.center_x
                center_y: target_time.center_y
                disabled: True
                opacity: 0
                
            MDRaisedButton:
                id: btn_end
                adaptive_size: True
                text: "Ausloggen"
                pos_hint: {"center_x": .5}
                y: target_time.y - self.height * 2
                on_release: root.stop_time()
            
            
